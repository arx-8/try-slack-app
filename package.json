{
  "name": "try-slack-app",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^16",
    "npm": "0",
    "yarn": "^1"
  },
  "scripts": {
    "build-dev": "swc src -d dist -w --source-maps inline",
    "build": "swc src -d dist",
    "dev": "(yarn build-dev) & sleep 3 && nodemon --watch dist --ext js --exec \"NODE_ENV=development node --inspect dist/index.js\"",
    "start": "yarn build && NODE_ENV=production node dist/index.js"
  },
  "devDependencies": {
    "@swc/cli": "0.1.55",
    "@swc/core": "1.2.148",
    "@types/node": "17.0.21",
    "typescript": "4.6.2"
  },
  "optionalDependencies": {
    "chokidar": "3.5.3",
    "nodemon": "2.0.15"
  }
}
